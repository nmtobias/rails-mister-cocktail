<div class=container>
<h1>Cocktails</h1>

<div class="row">
<% @cocktails.each do |cocktail| %>
  <div class="col-12 col-md-6 col-lg-3" >
   <%= link_to cocktail_path(cocktail) do %>
    <div class="card mb-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
      <div class="card-description">
      <h2><%= cocktail.name %></h2>
      </div>
    </div>
  </div>
   <%end%>
<%end%>
</div>

<%= link_to "+ create new cocktail", new_cocktail_path, class: 'btn btn-primary' %>
</div>